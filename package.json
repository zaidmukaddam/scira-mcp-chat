{
  "name": "mcp-chat",
  "version": "0.1.0",
  "private": true,
  "author": "Zaid Mukaddam <zaid@scira.ai>",
  "description": "A minimalistic and open source MCP Client.",
  "main": "./electron-build/main.js",
  "scripts": {
    "next:dev": "next dev --turbopack",
    "next:build": "next build --turbopack",
    "next:start": "next start",
    "next:lint": "next lint",
    "clean-build": "rm -rf .next && rm -rf electron-build && rm -rf dist",
    "electron:dev": "run-p electron:build-watch electron:watch",
    "electron:watch": "cross-env NODE_ENV='development' nodemon",
    "electron:build": "tsup",
    "electron:build-watch": "tsup --watch",
    "electron:dist": "electron-builder --mac",
    "dev": "run-p electron:dev next:dev",
    "build": "run-s next:build electron:build",
    "dist": "run-s build electron:dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "build": {
    "appId": "ai.scira.mcpchat",
    "asar": true,
    "productName": "Scira MCP Chat",
    "files": [
      "next.config.js",
      ".next/**",
      "public/**",
      "node_modules/**",
      "electron-build/**",
      "package.json",
      ".env"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "public/scira.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "CFBundleName": "Scira MCP Chat"
      }
    }
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.10",
    "@ai-sdk/cohere": "^1.2.9",
    "@ai-sdk/google": "^1.2.12",
    "@ai-sdk/groq": "^1.2.8",
    "@ai-sdk/openai": "^1.3.16",
    "@ai-sdk/react": "^1.2.9",
    "@ai-sdk/xai": "^1.2.14",
    "@neondatabase/serverless": "^1.0.0",
    "@radix-ui/react-accordion": "^1.2.7",
    "@radix-ui/react-avatar": "^1.1.6",
    "@radix-ui/react-dialog": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.11",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-popover": "^1.1.10",
    "@radix-ui/react-scroll-area": "^1.2.5",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tooltip": "^1.2.3",
    "@tanstack/react-query": "^5.74.4",
    "ai": "^4.3.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.42.0",
    "eventsource": "^3.0.6",
    "fast-deep-equal": "^3.1.3",
    "framer-motion": "^12.7.4",
    "lucide-react": "^0.488.0",
    "motion": "^12.7.3",
    "nanoid": "^5.1.5",
    "next": "^15.3.1",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "or": "^0.2.0",
    "pg": "^8.14.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/eventsource": "^3.0.0",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.13",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.0",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "esbuild": ">=0.25.0",
    "eslint": "^9.24.0",
    "eslint-config-next": "15.3.0",
    "npm-run-all": "^4.1.5",
    "pg-pool": "^3.8.0",
    "tailwindcss": "^4.1.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "electron-winstaller"
    ]
  }
}
